<div class="url-shortener">
  <%= form_for @url do |f| %>
    <%= f.text_field :original %>
    <%= f.submit "Shorten" %>
  <% end %>
</div>

<div class="url-stats">
  <ul>
  <% @urls.each do |url| %>
    <li>
      <%= url.original %> | <%= link_to url.shortened_url(@host_with_port), short_url_path(shortened: url.shortened) %>
    </li>
  <% end %>
</div>
